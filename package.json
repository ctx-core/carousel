{
	"name": "@ctx-core/carousel",
	"version": "9.0.29",
	"description": "ctx-core carousel",
	"keywords": [
		"ctx-core",
		"carousel"
	],
	"homepage": "https://github.com/ctx-core/carousel#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/carousel/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/carousel.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "npm run clean && npm run copy-components && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-components": "cd src && find . | grep \\.svelte$ | awk '{print \"mkdir -p dirname \"$1\" && cp -f \"$1\" ../dist/\"$1}'",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@ctx-core/ctx-core-package-tools": "workspace:^8.0.12",
		"@ctx-core/fontawesome": "workspace:^14.0.17",
		"@ctx-core/html": "workspace:^10.0.13",
		"@ctx-core/object": "workspace:^20.2.2",
		"svelte": "3.38.3",
		"typescript": "^4.3.4"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	}
}
